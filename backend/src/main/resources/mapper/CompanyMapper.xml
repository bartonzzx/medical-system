<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mobai.medical.mapper.CompanyMapper">
    <select id="getAllCompany" resultType="com.mobai.medical.domain.DrugCompany">
        select * from drugcompany
        <if test="name !=null and name!=''">
            <where>
                <bind name="companyName" value="'%'+name+'%'"/>
                company_name LIKE #{companyName}
            </where>
        </if>
    </select>

    <select id="getCompanyById" resultType="com.mobai.medical.domain.DrugCompany">
        select *
        from drugcompany
        where company_id = #{id}
        limit 1
    </select>
</mapper>